<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<%@ page import="java.sql.*" %>
<script language = "javascript">

function writeCheck()
{

	var form = document.writeform;
	
	if(!form.proname.value)
		{
		alert("제품명을 입력해주세요.");
		form.name.focus();
		return;
		}
	
	if(!form.nation.value)
	{
		alert("생산지를 적어주세요.");
		form.nation.focus();
		return;
	}
	if(!form.count.value)
	{
		alert("개수를 입력하세요.");
		form.count.focus();
		return;
	}
	form.submit();
	
}
</script>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
	<head>
 		<title>게시판</title>
	</head>
 	<body>
 		<table>
			 <form name=writeform method=post action="write_ok.jsp">
				<div class="text_container" style="position: relative;">
			 		<div class="text_input" style="margin-left : auto; margin-right : auto;">
			 			제품 명 : <input name"=proname" placeholder="공산품 제품명" value="" />
			 			생산지 : 	<input name"=proloc" placeholder="생산지" value="" />
						개수 : 	<input name"=pronumber" placeholder="공산품 개수" value="" />
					</div>
			 	</div>
			 </form>
		</table>
 
		<table width="100%" cellpadding="0" cellspacing="0" border="0">
  		<tr>
  			<td colspan="4" height="5"></td>
  		</tr>
  		<tr align="center">
   			<td>
   				<input type=button value="등록" OnClick = "javascript:writeCheck();">
   			</td>
  		</tr>
		</table>
	</body> 
</html>



